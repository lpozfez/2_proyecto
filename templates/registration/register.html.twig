{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block stylesheets %}
    {{parent()}}
    <link rel="stylesheet"  media="screen" href="{{asset('/assets/estilos/sass/paginas/login.css')}}">
{% endblock %}

{% block body %}
    {% block sidebar %}{% endblock %}

    {#<section class="l-seccion--inicio col-12 row main-banner" id="top"></section>#}
    
    <section class="login contact-us" id="contact-section">
        
        <div class="container registro">
            <h1>Registro de usuario</h1>
                    {{ form_start(registrationForm, {'attr': {'id': 'contact'}}) }}

                        {{ form_row(registrationForm.email) }}
                        {{ form_row(registrationForm.nombre) }}
                        {{ form_row(registrationForm.apellidos) }}
                        {{ form_row(registrationForm.telegram) }}
                        {{ form_row(registrationForm.plainPassword, {
                            label: 'Password'
                        }) }}
                        {{ form_row(registrationForm.agreeTerms) }}

                        <button type="submit" class="btn">Register</button>
                    {{ form_end(registrationForm) }}
                    <a href="{{path('main')}}" class="enlaceBruto">Volver</a>

                    {% for flash_error in app.flashes('verify_email_error') %}
                    <div class="alert alert-danger error" role="alert">{{ flash_error }}</div>
                    {% endfor %}
        </div>
    </section>
    {% block footer %}{% endblock %}

{% endblock %}
