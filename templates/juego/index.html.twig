{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{asset('/assets/css/juegos.css')}}">
{% endblock %}

{% block title %}Juegos{% endblock %}

{% block body %}
<div class="section-heading ">
  
  <section class="row main-banner" >
      <div class="col-12" id="juegos">
        {% for juego in juegos %}
        
          <div class="card col-2">
              <img src="{{asset('assets/images/juegos/' ~ juego.imagen)}}" class="card-img-top" alt="..."/>
              <div class="card-body">
                <h4 class="card-text"><em>{{juego.nombre}}</em></h4>
                <p class="card-text">{{juego.editorial}}</p>
              </div>
          </div>
        
        {% endfor %}
        
      </div>
  </section>

</div>
{% endblock %}
